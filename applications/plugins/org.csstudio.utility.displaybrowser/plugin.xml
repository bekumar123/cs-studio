<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.csstudio"
            class="org.csstudio.utility.displaybrowser.ui.SearchView"
            icon="icons/DisplayBrowser.gif"
            id="org.csstudio.utility.displaybrowser.ui.SearchView"
            name="Display Browser"
            restorable="true">
      </view>
      <category
            id="org.csstudio"
            name="CSS">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.csstudio.utility.displayBrowser.actionSet"
            label="CSS Action Set"
            visible="true">
         <action
               class="org.csstudio.utility.displaybrowser.ui.ShowDisplayBrowser"
               icon="icons/DisplayBrowser.gif"
               id="org.csstudio.utility.displayBrowser.ShowDisplayBrowser"
               label="Display Browser"
               menubarPath="css/utility/"
               style="push">
         </action>
      </actionSet>
   </extension>
