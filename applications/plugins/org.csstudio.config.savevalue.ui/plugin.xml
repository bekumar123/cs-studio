   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.csstudio.config.savevalue.service.ChangelogEntry"
            class="org.csstudio.config.savevalue.ui.changelogview.ChangelogEntryProcessVariableAdapterFactory">
         <adapter
               type="org.csstudio.platform.model.IProcessVariable">
         </adapter>
      </factory>
   </extension>
        <extension
           point="org.eclipse.ui.commands">
        <command
               defaultHandler="org.csstudio.config.savevalue.ui.changelogview.ShowChangelogView"
            id="org.csstudio.config.savevalue.ui.OpenChangelog"
            name="Changelog View">
      </command>
     </extension>
     <extension
                point="org.eclipse.ui.menus">
             <menuContribution
            allPopups="false"
            locationURI="menu:diag">
         <command
               commandId="org.csstudio.utility.ldap.newnamespacebrowser"
               icon="icons/save.gif"
               label="%ChangelogView.Name"
               style="push"
               tooltip="%ChangelogView.Name">
         </command>
      </menuContribution>
      </extension>
</plugin>
