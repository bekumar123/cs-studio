<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.csstudio.config.savevalue.ui.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.config.savevalue.ui.SaveValuePreferencePage"
            id="org.csstudio.config.savevalue.ui.PreferencePage"
            name="%PreferencePage.Label">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.csstudio"
            class="org.csstudio.config.savevalue.ui.changelogview.ChangelogViewPart"
            id="org.csstudio.config.savevalue.ui.ChangelogView"
            name="%ChangelogView.Name">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
   </extension>
     <extension
        point="org.eclipse.ui.commands">
     <command
           description="%saveValueCommandDescription"
           id="org.csstudio.config.savevalue.ui.commands.saveValue"
           name="%saveValueCommand">
        <commandParameter
              id="org.csstudio.config.savevalue.ui.commands.saveValue.pv"
              name="%saveValueCommandPVParameter"
              optional="true">
        </commandParameter>
        <commandParameter
              id="org.csstudio.config.savevalue.ui.commands.saveValue.value"
              name="%saveValueCommandValueParamter"
              optional="true">
        </commandParameter>
     </command>
  </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.csstudio.config.savevalue.ui.SaveValueCommandHandler"
            commandId="org.csstudio.config.savevalue.ui.commands.saveValue">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.csstudio.ui.menu.popup.processvariable">
         <command
               commandId="org.csstudio.config.savevalue.ui.commands.saveValue"
               icon="icon/save.gif"
               label="%SaveValueAction.Label"
               style="push"
               tooltip="%SaveValueAction.Tooltip">
            <visibleWhen>
            <or>
               <with variable="activeMenuSelection">
                  <iterate>
                     <adapt type="org.csstudio.sds.model.ProcessVariableWithSamples"/>
                  </iterate>
                  <and>
                     <count value="+"/>
                  </and>
               </with>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="[Lorg.csstudio.sds.model.ProcessVariableWithSamples;">
                     </adapt>
                  </iterate>
                  <and>
                     <count value="+"/>
                  </and>
               </with>
            </or>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.csstudio.popmenu"
               label="CSS">
         </menu>
      </menuContribution>
   </extension>
